{
  "name": "wpp-playground",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist --copy-files",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "build": "swc src -d dist --copy-files",
    "start": "NODE_ENV=production node dist/index.js",
    "env:local": "cp .env.local .env",
    "env:docker": "cp .env.docker .env",
    "run-db": "docker-compose up -d --build mongo",
    "run-app": "docker-compose up -d --build app",
    "run-docker": "docker-compose up -d --build",
    "lint:staged": "lint-staged --no-stash",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "yarn prettier"
    ],
    "*.yml": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/local-auth": "2.1.0",
    "@types/qrcode-terminal": "^0.12.0",
    "dotenv-safe": "^8.2.0",
    "googleapis": "105",
    "i18n": "^0.15.1",
    "image-to-base64": "^2.2.0",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.1",
    "jimp": "^0.22.12",
    "openai": "^4.47.3",
    "qrcode-terminal": "^0.12.0",
    "swc": "^1.0.11",
    "typescript": "^5.1.6",
    "whatsapp-web.js": "^1.23.0",
    "wwebjs-mongo": "^1.1.0",
    "yt-get": "^1.1.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@types/dotenv-safe": "^8.1.2",
    "@types/i18n": "^0.13.6",
    "@types/image-to-base64": "^2.1.2",
    "@types/node": "^20.14.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "ts-node-dev": "^2.0.0"
  }
}